<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/relativelayout2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvQuestionId"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ques. 1:"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whos the Prime minister of India?"
                    android:layout_toEndOf="@+id/tvQuestionId"
                    android:layout_marginLeft="5dp"
                    android:textColor="#8E8D8D"
                    android:textSize="17sp"/>
            </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"

                    android:layout_below="@+id/relativelayout2"
                    android:id="@+id/liner">

                    <Button
                        android:id="@+id/btUserAmswer"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:text="option 1"
                        android:layout_alignParentLeft="true"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/buttons4"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="13dp"


                        />

                    <Button
                        android:id="@+id/btCorrectAnswer"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="@drawable/buttons2"
                        android:textSize="13dp"
                        android:text="option 2"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffffff" />

                </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>