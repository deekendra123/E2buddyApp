<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School.Student.ActivityClass.StudentQuestionsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/relativelayout"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="30:00"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/tvTimeAlloted"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/relativelayout"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/rdops1"
        android:id="@+id/recyclerViewQuestions"/>


    <Button
        android:id="@+id/rdops1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="2dp"
        android:text="Submit"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:onClick="btSubmitClick"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/buttons5"
        android:textSize="18dp"


        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:visibility="gone"
        android:minWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>