<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView

            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            android:layout_below="@+id/imgWc"
            android:text="Do you want to ?"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />



        <Button
            android:id="@+id/btEditTest"
            android:layout_width="200dp"

            android:layout_height="40dp"
            android:background="@drawable/buttons5"
            android:textSize="13dp"
            android:text="Edit Test Details"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"

            android:layout_alignParentRight="true"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/btVisible"
            android:layout_width="200dp"

            android:layout_height="40dp"
            android:background="@drawable/buttons2"
            android:textSize="13dp"
            android:text="Visibility Turn On"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:visibility="gone"

            android:layout_alignParentRight="true"
            android:textColor="#ffffff" />



        <Button
            android:id="@+id/btDelete"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/buttons4"
            android:textSize="13dp"
            android:text="Delete"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff" />

    </LinearLayout>



</RelativeLayout>



