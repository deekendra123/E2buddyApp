<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".School.SuperAdmin.ActivityClass.SuperAdminAddTeacherActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgSchoolLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:elevation="4dp"
                    android:layout_gravity="center"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="School Name"
                    android:textStyle="bold"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:id="@+id/tvSchoolName"

                    android:textSize="18dp"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/admissionlayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="5dp"
                        android:id="@+id/imageView2"
                        app:srcCompat="@drawable/ic_name1"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_asterisk"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <EditText
                        android:layout_width="303dp"
                        android:layout_height="match_parent"
                        android:id="@+id/etTeacherName"

                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"

                        android:inputType="textCapSentences"
                        android:textCursorDrawable="@null"
                        android:hint="Teacher Name"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_marginLeft="5dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView"
                        app:srcCompat="@drawable/ic_name1"

                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_asterisk"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <EditText
                        android:layout_width="303dp"
                        android:layout_height="match_parent"
                        android:id="@+id/etEmail"

                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"

                        android:textCursorDrawable="@null"
                        android:hint="Email Id"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_marginLeft="5dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView1"
                        app:srcCompat="@drawable/ic_name1"

                        tools:ignore="VectorDrawableCompat" />


                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="12dp"/>


                    <EditText
                        android:layout_width="303dp"
                        android:layout_height="match_parent"
                        android:id="@+id/etPhoneNo"

                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"

                        android:textCursorDrawable="@null"
                        android:hint="Phone No."/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="Upload Student Image"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        tools:ignore="VectorDrawableCompat" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/chooseImage"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"

                            android:src="@drawable/ic_add_black_24dp"
                            android:id="@+id/imgStudent"/>

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:background="@drawable/buttons2"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/btAddTest"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_add_black_24dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Add Sibling"
                        />
                </RelativeLayout>



            </LinearLayout>


           <Button
               android:layout_width="150dp"

               android:id="@+id/btTeacher"
               android:layout_height="40dp"
               android:background="@color/colorPrimary"
               android:textColor="@color/white"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:text="Add Teacher"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>