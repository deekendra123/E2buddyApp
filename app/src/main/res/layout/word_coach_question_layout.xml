<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/imgWc"

            android:layout_centerHorizontal="true"
            android:background="@drawable/wc"/>

        <TextView

            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            android:layout_below="@+id/imgWc"
            android:text="Word Coach"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />


        <TextView

            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"

            android:layout_below="@+id/logo"

            android:text=""
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"

            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvQuestion"
            android:id="@+id/liner">

            <Button
                android:id="@+id/btOption1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="option 1"
                android:layout_alignParentLeft="true"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@drawable/buttons1"

                android:layout_weight="1"
                android:textSize="13dp"


                />

            <Button
                android:id="@+id/btOption2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/buttons1"
                android:textSize="13dp"
                android:text="option 2"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/liner"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/linearResultLayout">


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"

                android:layout_marginTop="20dp"
                android:id="@+id/liner1">


                <TextView
                    android:id="@+id/tvUserAnswer"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="option 2"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tvCorrectAnswer"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="option 2"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/imgCheck"
                android:background="@drawable/ic_checked"/>


            <TextView

                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Description"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btNext"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="15dp"
                android:text="Next Question"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:background="@drawable/circle1"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>


        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>



