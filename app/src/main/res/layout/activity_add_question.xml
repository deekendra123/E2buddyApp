<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School.Admin.ActivityClass.AdminAddQuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/relativelayout"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="School Name"

            android:textStyle="bold"
            android:gravity="center"

            android:textColor="#ffffff"
            android:id="@+id/tvSchoolName"

            android:textSize="18dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgSchoolLogo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:id="@+id/relativelayout1"
        android:layout_below="@+id/relativelayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Class"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/tvClassName"


            android:textSize="16dp"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Section "

            android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"

            android:id="@+id/tvSectionName"
        android:textSize="16dp"/>
        <TextView
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:text="Test Name"
        android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/tvTestName"
        android:textColor="#000000"

        android:textSize="16dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/relativelayout1"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/relativelayout2"
        android:id="@+id/recyclerViewQuestions"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/relativelayout2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginRight="55dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btsubmit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="15dp"

            android:text="Submit"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:background="@drawable/circle3"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>
<!--        <Button-->
<!--            android:id="@+id/btAddQuestion"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="40dp"-->
<!--            android:textSize="15dp"-->
<!--            android:text="Add Question"-->
<!--            android:textAllCaps="false"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:textColor="#ffffff"-->
<!--            android:background="@drawable/circle3"-->
<!--            android:layout_marginBottom="15dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="20dp"/>-->


    </LinearLayout>


</RelativeLayout>