<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School.Admin.ActivityClass.AdminAddExamActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/relativelayout"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="School Name"

            android:textStyle="bold"

            android:gravity="center"
            android:textColor="#ffffff"
            android:id="@+id/tvSchoolName"

            android:textSize="18dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgSchoolLogo"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Exam"
        android:layout_below="@+id/relativelayout"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/tvText"

        android:textSize="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvText"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Exam Name"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerExamName"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Class"
                    android:textColor="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:textSize="14dp"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linear"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerClass"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Section"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_margin="10dp"
                        android:id="@+id/recyclerViewSection"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Subject"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerSubject"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Max Marks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/etMaxMarks"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Pass Marks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/etPassMarks"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:hint=""/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"

                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Test Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"

                    android:id="@+id/tvTestDate1"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tvTestDate"
                    android:inputType="text"
                    android:textCursorDrawable="@null" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Start Time"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerStartTime"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Stop Time"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerStopTime"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Time Allotted         (In minutes)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/etTimeAlloted"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:hint=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Correct Answer Marks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/etCorrectAnswerMark"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:hint=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Wrong Answer Marks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/etWrongAnswerMark"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:hint=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Not Attempted Marks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#B9B8B8"
                    android:layout_marginLeft="8dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:id="@+id/etNotAttempted"
                    android:layout_marginLeft="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:hint=""/>

            </LinearLayout>


            <Button
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/buttons2"
                android:text="Add Exam"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="btAddTestOnClick"
                android:id="@+id/btAddTest"/>





        </LinearLayout>
    </ScrollView>


</RelativeLayout>