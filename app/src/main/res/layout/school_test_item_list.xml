<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/cardView"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Name"

                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"

                android:gravity="center"

                android:id="@+id/tvTestName"
                android:textStyle="bold"
                tools:ignore="VectorDrawableCompat" />

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/imgStatus"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="15dp"
                       android:visibility="gone"
                       android:layout_centerVertical="true"
                       android:background="@drawable/error"/>
                </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:id="@+id/tvSubjectNmae"
                android:layout_below="@+id/tvTestName"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:gravity="center"
                tools:ignore="VectorDrawableCompat" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@+id/layout1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/layout11"

                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09"
                        android:textColor="@color/colorPrimary"
                        android:textSize="35dp"
                        android:id="@+id/tvDate"
                        android:gravity="center"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="22dp"
                        android:id="@+id/tvMonth"
                        android:gravity="center"
                        tools:ignore="VectorDrawableCompat" />


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"

                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/layout11"
                    android:id="@+id/view"
                    android:layout_marginBottom="15dp"
                    android:background="@color/colorPrimary"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:id="@+id/layout12"
                    android:layout_toEndOf="@+id/view"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/layout"
                        android:layout_marginLeft="1dp"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Section"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp"

                            android:gravity="center"
                            tools:ignore="VectorDrawableCompat" />
                        <TextView
                            android:id="@+id/tvSectionName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            tools:ignore="VectorDrawableCompat" />


                    </LinearLayout>




                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgSchoolLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Marks"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:id="@+id/tvMaxMarks"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pass Marks"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        android:id="@+id/tvPassMarks"
                        android:gravity="center"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visible : 0"
                    android:id="@+id/tvVisibility"
                    android:layout_above="@+id/tvAddedBy"

                    android:layout_marginRight="15dp"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentBottom="true"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass Marks"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:id="@+id/tvAddedBy"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>