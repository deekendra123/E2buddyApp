<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".School.Student.ActivityClass.StudentDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSchoolLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_gravity="center"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="School Name"
            android:textStyle="bold"
            android:gravity="center"

            android:textColor="#000000"
            android:id="@+id/tvSchoolName"

            android:textSize="18dp"/>


    </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/admissionlayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="5dp"
                        android:id="@+id/imageView2"
                        app:srcCompat="@drawable/ic_admission"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_asterisk"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <EditText
                        android:layout_width="303dp"
                        android:layout_height="match_parent"
                        android:id="@+id/etAdmissionNo"

                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"

                        android:inputType="textCapSentences"
                        android:textCursorDrawable="@null"
                        android:hint="Student Admission Number"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <ImageView
                        android:layout_width="60dp"
                        android:layout_marginLeft="5dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView"
                        app:srcCompat="@drawable/ic_name1"

                        tools:ignore="VectorDrawableCompat" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_asterisk"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <EditText
                        android:layout_width="303dp"
                        android:layout_height="match_parent"
                        android:id="@+id/editText11"

                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"
                        android:inputType="textCapSentences"

                        android:textCursorDrawable="@null"
                        android:hint="Enter Student Name"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/datelayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_marginLeft="5dp"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/imageView1"
                        app:srcCompat="@drawable/ic_birthday1"
                        tools:ignore="VectorDrawableCompat" />



                    <View
                        android:layout_width="2dp"
                        android:layout_height="45dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="12dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/editText12"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:text="Date of Birth"
                        android:textColorHint="#000000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Class"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:drawableRight="@drawable/ic_asterisk"

                        tools:ignore="VectorDrawableCompat" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="12dp"/>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linear"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerClass"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_white_24dp"
                            />

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Section"
                        android:textColor="#000000"
                        android:drawableRight="@drawable/ic_asterisk"

                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        tools:ignore="VectorDrawableCompat" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="12dp"/>


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearSection"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerSection"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_keyboard_arrow_down_white_24dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape">


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="Upload Student Image"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        tools:ignore="VectorDrawableCompat" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#B9B8B8"
                        android:layout_marginLeft="8dp"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/chooseImage"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"

                            android:src="@drawable/ic_add_black_24dp"
                            android:id="@+id/imgStudent"/>

                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="150dp"
                    android:background="@drawable/buttons2"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/btAddTest"
                    android:layout_gravity="right"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@drawable/ic_add_black_24dp"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Add Sibling"
                        />
                </RelativeLayout>



            </LinearLayout>


            <ImageView
                android:id="@+id/button8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/btcircle1"
                app:srcCompat="@drawable/ic_arrow"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"

                tools:ignore="VectorDrawableCompat" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>