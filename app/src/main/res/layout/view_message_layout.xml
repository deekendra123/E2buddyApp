<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/imgWc"

            android:layout_centerHorizontal="true"
            android:background="@drawable/thumb"/>

        <TextView

            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            android:layout_below="@+id/imgWc"
            android:text="Congratulations UserNmae!"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />


        <TextView

            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_below="@+id/tvUserName"

            android:text=""
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"


            />



        <TextView

            android:id="@+id/tvMessage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"

            android:layout_below="@+id/tvMessage"
            android:text="We would love to see you back tomorrow "


            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"


            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvMessage1"
            android:id="@+id/liner">


            <Button
                android:id="@+id/btExit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/circle1"
                android:textSize="13dp"
                android:text="Click to finish"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"

                android:layout_alignParentRight="true"
                android:textColor="#ffffff" />

        </LinearLayout>




    </RelativeLayout>



</RelativeLayout>



