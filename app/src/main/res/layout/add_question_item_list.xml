<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
         >


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Question"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:id="@+id/tvQuestion"
                android:drawableRight="@drawable/ic_asterisk"

                android:gravity="center"
                tools:ignore="VectorDrawableCompat" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"

                android:textColorHint="@color/white"
                android:id="@+id/etQuestion"
                android:inputType="textCapSentences"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Option1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/ic_asterisk"

                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text=""
                    android:textColorHint="@color/white"
                    android:inputType="textCapSentences"
                    android:id="@+id/etOption1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Option2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text=""
                    android:id="@+id/etOption2"
                    android:inputType="textCapSentences"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Option3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text=""
                    android:id="@+id/etOption3"
                    android:inputType="textCapSentences"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Option4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColorHint="@color/white"
                    android:textColor="@color/black"
                    android:text=""

                    android:id="@+id/etOption4"
                    android:inputType="textCapSentences"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"

                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Answer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_asterisk"

                    tools:ignore="VectorDrawableCompat" />



                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/spinner_bg1"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerOptions"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:gravity="center"
                    tools:ignore="VectorDrawableCompat" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:textColorHint="@color/white"
                    android:textColor="@color/black"
                    android:text=""

                    android:id="@+id/etDescription"
                    android:inputType="textCapSentences"/>

            </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Delete"
                            android:gravity="center"
                            android:layout_marginBottom="5dp"
                            android:textSize="15dp"


                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="right"
                            android:visibility="gone"
                            android:id="@+id/tvDeleteQuestion"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>
