<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School.Student.ActivityClass.StudentTestInstructionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/relativelayout1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UserName"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/tvStudentName"

            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativelayout1"
        android:id="@+id/relativelayout"
       >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Science"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:id="@+id/tvSubjectNmae"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Demo Test"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_marginRight="15dp"
            android:id="@+id/tvTestName"
            android:textSize="15dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativelayout2"
        android:layout_below="@+id/relativelayout"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Max Marks: 50"
            android:textColor="@color/black"
            android:id="@+id/tvMaxMarks"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Pass Marks 25"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:layout_marginRight="15dp"
            android:id="@+id/tvPassMarks"
            android:textSize="12dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/relativelayout2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:gravity="center"
        android:layout_below="@+id/relativelayout2"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginRight="15dp"
        android:id="@+id/tvInst"
        android:textSize="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/e2buddy"
            android:layout_marginTop="10dp"
            android:id="@+id/linear1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/e2buddy"
                android:id="@+id/tvTotalQuestion"
                android:layout_marginLeft="20dp"
                android:text="No. of Questions: 20"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_check1"
                android:drawablePadding="7dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/e2buddy"
                android:id="@+id/text2"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:text="Marking System"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_check1"
                android:drawablePadding="7dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/e2buddy"
                android:id="@+id/tvCorrectAnswerMarks"
                android:text="+5 for Correct Ans."
                android:drawableLeft="@drawable/ic_points"
                android:drawablePadding="7dp"

                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_points"
                android:drawablePadding="7dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/e2buddy"
                android:id="@+id/tvNotAttemptedMarks"
                android:text="0 for not Attempted"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/e2buddy"
                android:id="@+id/tvWrongAnsMarks"
                android:text="-3 for wrong Answer"
                android:drawableLeft="@drawable/ic_points"
                android:drawablePadding="7dp"
                android:layout_marginTop="10dp"

                />
            </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"

    android:layout_height="0.5dp"
    android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/tvTimeAllotedds"
                android:text="Time Allotted"
                android:textStyle="bold"
                android:gravity="center"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="30 min."
                android:id="@+id/tvTimeAlloted"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:background="@drawable/buttons1"
        android:layout_marginBottom="10dp"
        android:id="@+id/btStartTest"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:onClick="btStartTestOnClick"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Start Test"
            />
    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:visibility="gone"
        android:minWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>