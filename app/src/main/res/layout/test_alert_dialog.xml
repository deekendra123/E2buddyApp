<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:gravity="center"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/relativelayout"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/tvSubjectNmae"
                android:textSize="17dp"/>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bgback4"
            android:layout_below="@+id/relativelayout"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgCheck"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_checked"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class - "
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvClassName"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvSectionName"
                android:textSize="18dp"/>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/tvTestName"
                android:textColor="@color/colorPrimary"

                android:textSize="18dp"/>

            <Button
                android:id="@+id/btAddQuestion"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="15dp"
                android:text="Add Question"
                android:layout_marginLeft="5dp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:background="@drawable/circle1"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"

                android:id="@+id/linerLayout"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. of Questions you want to add?"
                android:gravity="center"
                android:layout_marginTop="10dp"

                android:textColor="@color/colorPrimary"

                android:textSize="16dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/layout1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_marginLeft="10dp"
                        android:cursorVisible="true"
                        android:inputType="number"
                        android:id="@+id/etQuestionNumber"
                        android:textCursorDrawable="@null"
                        android:hint=""/>



                </LinearLayout>

                <ImageView
                    android:id="@+id/btNext"
                    android:layout_width="37dp"
                    android:layout_toEndOf="@+id/layout1"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btcircle2"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_arrow"
                    tools:ignore="VectorDrawableCompat" />




            </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>



